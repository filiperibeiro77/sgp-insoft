<div class="container">
  <center>
  <div class="jumbotron">
    
  <div class ="row">
<h1>Novo Funcionário</h1>
</div>
</div>
</center>
</div>

  <%= form_for(@user) do |f| %>
  <div class="container">
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "Erro") %> Funcionário não pode ser criado:</h2>


      <ul>
      <% @user.errors.each do |attr,msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
</div>
  <div class="container">
      <div class="field">
      <%= f.label :name, "Nome" %><br>
      <%= f.text_field :name %>
      </div>
      <div class="field">
      <%= f.label :cpf %><br>
      <%= f.text_field :cpf %><br>
      </div>
      <div class="field">
      <%= f.label :telefone %><br>
      <%= f.text_field :phone %><br>
      </div>
      <div class="field">
      <%= f.label :departamento %><br>
      <%= f.select :departament, ['Efetivo','Diretor de gestão de pessoas','Diretor administrativo','Diretor de negócio','Diretor de desenvolvimento','Diretor de TI','Diretor de Marketing','Diretor Institucional','Diretor Organizacional','Diretor Financeiro','Vice-diretor de gestão de pessoas','Vice-diretor administrativo','Vice-diretor de negócio','Vice-diretor de desenvolvimento','Vice-diretor de TI
','Vice-diretor de Marketing','Vice-diretor Institucional','Vice-diretor Organizacional','Vice-diretor Financeiro']%>
      </div>
      <div class="field">
      <%= f.label :endereço %><br>
      <%= f.text_field :adress %><br>
      </div>
      <div class="field">
      <%= f.label :sexo %><br>
      <%= radio_button_tag(:gender, "male") %>
      <%= label_tag(:gender, "Masculino") %>
      <%= radio_button_tag(:gender, "female") %>
      <%= label_tag(:gender, "Feminino") %>
      </div>
      ____________________________
      <p>Login</p>
      <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %><br>
      </div>
      <div class="field">
      <%= f.label :password, "Senha" %><br>
      <%= f.password_field :password %><br>
      </div>
      <div class="field">
      <%= f.label :password_confirmation, "Repita a senha" %><br>
      <%= f.password_field :password_confirmation %>
      </div>

      <div class="actions">
      <%= f.submit :"Cadastrar", class: "btn btn-success btn-md", style: "color:white; float: left;"%>
      </div>
    <% end %>

    <%= link_to 'Voltar', root_path, class: "btn btn-warning btn-md", style: "color:white; margin-left:1%;" %>
</div>



