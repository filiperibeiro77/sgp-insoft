<%= form_for(@activity_process) do |f| %>
  <div class="container">
  <% if @activity_process.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@activity_process.errors.count, "Erro") %> Atividade não pode ser criada:</h2>

      <ul>
      <% @activity_process.errors.each do |attr,msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
</div>
  <div class="container">
  <div class="field">
    <%= f.label :nome_da_atividade %><br>
    <%= f.text_field :name_activity %>
  </div>
  <div class="field">
    <%= f.label :processo_da_atividade %><br>
    <%= "#{@selective_process.name_process}" %><br>
  </div> 
  <div class="field" style = "display:none;">
    <%= f.label :processo_da_atividade %><br>
    <%= f.text_field :SelectiveProcess_id, :value => @selective_process.id %>
  </div>
  <div class="field">
    <%= f.label :responsavel %><br>
    <%= f.collection_select :responsible_activity, User.all, :id, :name, :prompt => "Selecione um responsável" %><br>
  </div>
  <div class="field">
    <%= f.label :descrição %><br>
    <%= f.text_area :description_activity %><br>
  </div>
  <div class="field">
    <%= f.label :deadline %><br>
    <%= f.date_select :deadline_activity %>
  </div>
  <div class="actions">
    <%= f.submit :"Confirmar", class: "btn btn-success btn-md", style: "color:white;  float: left"%>
  </div>
<% end %>
<%= link_to 'Voltar', root_path, class: "btn btn-warning btn-md", style: "color:white; margin-left:1%;" %>
</div>
