<p id="notice"><%= notice %></p>

<div class="container">
  
    <div class="jumbotron">
    
     <div class ="row">
      <center>
      <h1><%= @selective_process.name_process %></h1>
  
<p>
  <strong>Responsável:</strong>
  <%= @responsible.name %>
</p>

<p>
  <strong>Deadline:</strong>
  <%= @selective_process.deadline %>
</p>
</center>
</div>
</div>

  <center>
	<strong><h3>Atividades</h3></strong>
  </center>
  <div class="container">
  <table class="table table-striped">
          <thead>
            <tr>
              <th>Nome da Atividade</th>
              <th>Responsável</th>
              <th>Deadline</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @activities.each do |activity| %>
              <% @responsible_actvity = User.find(activity.responsible_activity) %>
              <tr>
                <td><%= activity.name_activity %></td>
                <td><%= @responsible_actvity.name %></td>
                <td><%= activity.deadline_activity %></td>
                <td><%= link_to 'Ver', activity, class: "btn btn-info btn-xs", style: "color:white; text-decoration:none;" %></td>
                <% if current_user.is_admin %>
                  <td><%= link_to 'Editar', edit_activity_process_path(activity),class: "btn btn-warning btn-xs", style: "color:white; text-decoration:none;"%></td>
                  <td><%= link_to 'Excluir', activity, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs", style: "color:white; text-decoration:none;" %></td>
                <% else %>
                  <% # do nothing %>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
        </br>
        </br>
        </br>
        </br>
        
</div>  
<center>
        <%= link_to 'Voltar', "/processos", class: "btn btn-warning btn-md", style: "color:white;" %>
      </center>
